{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"typeRoots": ["./node_modules/@types", "./src/image.d.ts", "googlemaps"],
		"baseUrl": ".",
		"paths": {
			"@Components/*": ["./src/components/*"],
			"@Api/*": ["./src/api/*"],
			"@Assets/*": ["./src/assets/*"],
			"@Constants/*": ["./src/constants/*"],
			"@Context/*": ["./src/context/*"],
			"@Hook/*": ["./src/hook/*"],
			"@I8n/*": ["./src/i18n/*"],
			"@Icons/*": ["./src/icons/*"],
			"@Router/*": ["./src/router/*"],
			"@Screens/*": ["./src/screens/*"],
			"@Styles/*": ["./src/styles/*"],
			"@Types/*": ["./src/types/*"],
			"@Utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
